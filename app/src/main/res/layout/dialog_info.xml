<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="320dp"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/id_dialog_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/id_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            />

        <TextView
            android:id="@+id/id_dialog_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingTop="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_dialog_msg_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:textColor="@color/friend_shane_shoutu"/>

        <TextView
            android:id="@+id/id_dialog_msg_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textColor="@color/friend_shane_shoutu"/>

        <TextView
            android:id="@+id/id_dialog_msg_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|top"
            android:textColor="@color/friend_shane_shoutu"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/id_dialog_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/mingxi_tab_bg"
            android:text="开始任务"
            android:textColor="@android:color/white"
            />

        <LinearLayout
            android:id="@+id/id_dialog_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/id_dialog_centent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <com.rey.material.widget.ProgressView
                android:id="@+id/id_dialog_prog"
                style="@style/LightDeterminateLinearProgressView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
        </LinearLayout>

        <Button
            android:id="@+id/id_dialog_shenhe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/mingxi_tab_bg"
            android:text="提交审核"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/id_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/mingxi_tab_bg"
            android:text="放弃(把机会留给其他人)"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</LinearLayout>