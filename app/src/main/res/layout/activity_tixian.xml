<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_bg"
    tools:context="com.qx.www.shuang_la_master.activity.TixianActivity">

    <include
        android:id="@+id/id_tixian_toolbar"
        layout="@layout/toolbar1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_below="@id/id_tixian_toolbar"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/id_tixian_shoujichongji"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"
                android:text="手机充值"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="(多充多送)"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="18dp"
                android:src="@drawable/toright"
                />


        </LinearLayout>

        <View
            android:id="@+id/id_tixian_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/id_tixian_shoujichongji"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:id="@+id/id_tixian_weixintixian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/id_tixian_line1"
            android:background="@android:color/white"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"
                android:text="微信提现"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="(微信提现有优惠)"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="18dp"
                android:src="@drawable/toright"/>

        </LinearLayout>

        <View
            android:id="@+id/id_tixian_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/id_tixian_weixintixian"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:id="@+id/id_tixian_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/id_tixian_line2"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="left|center"
                android:text="支付宝提现"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="(每笔0.5元手续费)"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="18dp"
                android:src="@drawable/toright"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
