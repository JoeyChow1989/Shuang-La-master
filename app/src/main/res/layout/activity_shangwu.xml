<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_bg"
    tools:context="com.qx.www.shuang_la_master.activity.ShangwuActivity">

    <include
        android:id="@+id/id_shangwu_toolbar"
        layout="@layout/toolbar1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@android:color/white"
        android:layout_below="@id/id_shangwu_toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="商务合作"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1.3"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="商务合作请联系：bd@shuangla.com"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:text="* 此邮箱仅处理商务合作，不回复任何客服问题，客服问题请前往客服中心"/>

    </LinearLayout>

</RelativeLayout>
