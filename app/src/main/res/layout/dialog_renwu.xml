<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="300dp"
              android:layout_centerInParent="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                ></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                ></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/id_dialog_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sssss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                ></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/id_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:paddingLeft="15dp"
                    android:text="澎湃新闻"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/id_dialog_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:paddingLeft="15dp"
                    android:text="大小  5.25M"
                    android:textSize="13sp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="2.5"
            android:paddingLeft="20dp"
            android:text="任务步骤"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/id_dialog_msg_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="1.首次下载并安装"
                android:textColor="@color/friend_shane_shoutu"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_dialog_msg_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="2.手机号注册并选购 商品 添加 购物车"
                android:textColor="@color/friend_shane_shoutu"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/id_dialog_msg_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="3.回到爽啦,提交审核获取奖励"
                android:textColor="@color/friend_shane_shoutu"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.qx.www.shuang_la_master.ui.MyProgressBar
            android:id="@+id/id_renwu_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progressDrawable="@drawable/progressbar"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1.1"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cancel_renwu_bg"
            android:text="放弃任务"
            android:textColor="#FF7C7C7C"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/id_dialog_shenhe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/shenhe_renwu_bg"
            android:text="提交审核"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>